{
  "mcpServers": {
    "ComfyUI": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/IO-AtelierTech/comfyui-mcp.git",
        "comfy-mcp-server"
      ],
      "env": {
        "COMFY_URL": "http://localhost:8188",
        "COMFY_WORKFLOWS_DIR": "${workspaceFolder}/workflows-api",
        "COMFY_WORKFLOWS_UI_DIR": "${workspaceFolder}/workflows-ui",
        "OUTPUT_MODE": "file",
        "POLL_TIMEOUT": "120",
        "POLL_INTERVAL": "1.0"
      }
    }
  }
}
